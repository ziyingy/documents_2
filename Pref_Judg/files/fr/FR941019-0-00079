<!-- PJG tableformat 3,L0,b1,p1,8/9,g1,t1,3,r10,xs44R -->

<!-- PJG 0012 frnewline -->

<!-- PJG 0012 frnewline -->

<!-- PJG 007 0150 intable -->
1&blank; 
<!-- PJG 0012 frnewline -->

<!-- PJG 007 0150 intable -->
1&blank;
<!-- PJG 0012 frnewline -->

<!-- PJG 007 0150 intable -->
1&blank;
<!-- PJG 0012 frnewline -->

<!-- PJG 007 0152 intable -->

<!-- PJG 0012 frnewline -->

<!-- PJG 0012 frnewline -->

<!-- PJG ITAG l=01 g=1 f=1 -->
(a) 
<!-- PJG 007 0104 intable -->
Principal coverage_(98% &times; $100,000)
<!-- PJG 007 0104 intable -->
$98,000.00 
<!-- PJG 0012 frnewline -->

<!-- PJG 0012 frnewline -->
(b) 
<!-- PJG 007 0104 intable -->
Interest coverage_(8% &times; $98,000)
<!-- PJG 007 0104 intable -->
$7,840.00 
<!-- PJG 0012 frnewline -->

<!-- PJG 0012 frnewline -->

<!-- PJG 007 0162 intable -->
