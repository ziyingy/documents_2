<!-- PJG 0012 frnewline -->

<!-- PJG ITAG l=01 g=1 f=1 -->
(a) 
<!-- PJG 007 0104 intable -->
Principal due January 31
<!-- PJG 007 0104 intable -->
$100,000.00
<!-- PJG 0012 frnewline -->

